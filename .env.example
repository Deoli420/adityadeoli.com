# ── SentinelAI — Environment Configuration ─────────────────────────────
# Copy this file to .env and fill in the values.
#   cp .env.example .env
# ─────────────────────────────────────────────────────────────────────────

# ── Application ─────────────────────────────────────────────────────────
DEBUG=false

# ── Database (Postgres) ─────────────────────────────────────────────────
DB_HOST=db
DB_PORT=5432
DB_USER=sentinel
DB_PASSWORD=sentinel
DB_NAME=sentinel_db

# ── AI / LLM (OpenAI) ──────────────────────────────────────────────────
# Required for anomaly analysis.  Leave empty to disable AI features.
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_SECONDS=30.0
AI_ENABLED=true

# ── Scheduler ───────────────────────────────────────────────────────────
SCHEDULER_ENABLED=true
SCHEDULER_MAX_CONCURRENT=5

# ── Alerts / Webhook (n8n) ──────────────────────────────────────────────
# Set WEBHOOK_URL to your n8n webhook endpoint to enable alerts.
WEBHOOK_ENABLED=true
WEBHOOK_URL=
WEBHOOK_TIMEOUT_SECONDS=10.0
ALERT_MIN_RISK_LEVEL=MEDIUM
