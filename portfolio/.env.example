# Bantr API Test Suite Environment Variables

# API Configuration
BANTR_API_BASE_URL=https://api.bantr.fun
BANTR_API_KEY=your_api_key_here
BANTR_API_VERSION=v1

# Authentication
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Test Configuration
TEST_TIMEOUT=30000
TEST_RETRIES=3
TEST_USER_ID=test_user_123
TEST_USERNAME=test_user

# Server Configuration
PORT=3000
NODE_ENV=development

# Database (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/bantr_test

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_ANALYTICS_TESTS=true
ENABLE_PERFORMANCE_TESTS=true
ENABLE_INTEGRATION_TESTS=true