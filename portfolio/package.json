{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Bantr API Test Suite with Web UI",
  "main": "server.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "node server.js",
    "test": "jest --verbose --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t bantr-test-suite .",
    "docker:run": "docker run -p 3000:3000 --env-file .env bantr-test-suite"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "framer-motion": "^11.0.8",
    "react-intersection-observer": "^9.8.1",
    "@fontsource/space-grotesk": "^5.0.8",
    "@fontsource/fira-code": "^5.0.19",
    "react-router-dom": "^6.22.3",
    "@react-spring/web": "^9.7.3",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "@types/canvas-confetti": "^1.6.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/src/tests/**/*.test.js",
      "**/src/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/utils/testSetup.js"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Bantr API Test Report",
          "outputPath": "./jest-html-report.html",
          "includeFailureMsg": true,
          "includeSuiteFailure": true,
          "theme": "lightTheme"
        }
      ]
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/utils/testSetup.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}